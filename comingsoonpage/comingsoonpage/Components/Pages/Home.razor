@page "/"

<PageTitle>Carnexa - Coming Soon</PageTitle>

<div class="coming-soon-container">
    <div class="hero-section">
        <div class="hero-content">
            <div class="logo-section">
                <img src="bootstrap/logo.png" alt="Carnexa Logo" class="company-logo" />
                <div class="logo-subtitle">Automotive Excellence</div>
            </div>
            
            <div class="main-heading">
                <h2 class="coming-soon-text">Coming Soon</h2>
                <div class="launch-text">Launching in 2024</div>
            </div>
            
            <div class="description-section">
                <p class="tagline">Your Automotive Business, Amplified.</p>
                <p class="description">
                    Connect, Sell, and Grow with Carnexa: The Ultimate Auto Platform. 
                    Discover New Possibilities Today!
                </p>
            </div>
            
            <div class="cta-section">
                <div class="email-signup">
                    <h3>Be the First to Know</h3>
                    <div class="signup-form">
                        <input type="email" placeholder="Enter your email address" class="email-input" />
                        <button class="notify-btn">Notify Me</button>
                    </div>
                </div>
            </div>
            
            <div class="features-preview">
                <div class="feature-item">
                    <div class="feature-icon">🚗</div>
                    <span>Connect</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">💰</div>
                    <span>Sell</span>
                </div>
                <div class="feature-item">
                    <div class="feature-icon">📈</div>
                    <span>Grow</span>
                </div>
            </div>
        </div>
    </div>
    
    <div class="background-animation">
        <div class="floating-shape shape-1"></div>
        <div class="floating-shape shape-2"></div>
        <div class="floating-shape shape-3"></div>
        <div class="floating-shape shape-4"></div>
    </div>
</div>
